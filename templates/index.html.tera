<!doctype html>
<html lang="de">
   <head>
       <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
       <link rel="stylesheet" href="css/weather.css">
       <link rel="stylesheet" href="css/all.min.css">
       <script defer src="js/all.min.js"></script>
       <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
       <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
       <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

       <script>
           $(document).read(function () {
               window.setInterval(function(){
                   $.get({
                       url: '/api/v1/current/',
                       success: function (data) {
                           console.log(data);
                           value = JSON.parse(data);
                           $('#current_temp').html(value.temperature);
                           $('#current_temp').html(value.humidity);
                       },
                       error: function (xhr, ajaxOptions, thrownError){
                           alert('error!');
                       }
                    });
               }, 5000);
           });
       </script>
   </head>

   <body>
        <div class="container-fluid">
            <div class="row main">

                <div class="col-3 sidebar padding">
                    <h1>
                        <i class="fal fa-thermometer-half"></i>
                        <span id="current_temp">3</span><sup>&deg;C</sup>
                        <i class="fal fa-humidity"></i>
                        <span id="current_hmdt">3</span>g/m<sup>3</sup>
                    </h1>
                    <h3>Teilweise bew√∂lkt</h3>
                    <div class="row margin-top">
                        <div class="col-6">
                            <h3>
                                <i class="fal fa-temperature-high"></i>
                                4<sup>&deg;C</sup>
                            </h3>
                            <p>14 Uhr</p>
                        </div>
                        <div class="col-6">
                            <h3>
                                <i class="fal fa-temperature-low"></i>
                                1<sup>&deg;C</sup>
                            </h3>
                            <p>7 Uhr</p>
                        </div>
                    </div>
                    <div class="margin-top">
                        <h5>
                            <i class="fal fa-calendar-alt"></i>
                            Mo, 5. Mai 2020 10:45
                        </h5>
                        <h5>
                            <i class="fal fa-map-marker-alt"></i>
                            Senden, NRW, Deutschland
                        </h5>
                    </div>
                </div>

                <div class="col-9">
                    <div class="row min">
                        <div class="col-12 padding">
                            <h2 class="text-center">Temperatur je Stunde</h2>

                        </div>
                    </div>

                    <div class="row min">
                        <div class="col-4 padding border-top border-right">
                            <h2 class="text-center">UV Index</h2>
                        </div>
                        <div class="col-4 padding border-top border-right">
                            <h2 class="text-center">Sichtweite</h2>
                        </div>
                        <div class="col-4 padding border-top">
                            <h2 class="text-center">Wind</h2>
                        </div>
                    </div>

                </div>

            </div>
        </div>
   </body>
</html>